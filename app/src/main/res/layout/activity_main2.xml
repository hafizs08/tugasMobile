<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:src="@color/cardview_dark_background"></ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_sb"
            android:text="User"
            android:textColor="@color/white"
            android:textSize="17dp"></TextView>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_bell" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_below="@id/header"
        android:layout_marginBottom="22dp">

        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/opensans_sb"
                android:text="Riwayat Kegiatan"
                android:textColor="@color/white"
                android:textSize="34dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:src="@drawable/ic_drop"
                android:background="#00000000"
                android:onClick="onHistoryButton"></ImageButton>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/head"
            android:layout_marginLeft="27dp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/rabu_15_desember_2021"
            android:textColor="#4DFFFFFF"
            android:textSize="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/riwayat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/atas"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="27dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/weight"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginRight="4dp"
                app:cardBackgroundColor="#00000000">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_weight" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineSpotShadowColor="#00FFFFFF"
                app:cardBackgroundColor="#001C1C1E">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="1dp">

                    <TextView
                        android:id="@+id/wNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/opensans_sb"
                        android:text="127"
                        android:textColor="@color/white"
                        android:textSize="17dp"></TextView>

                    <TextView
                        android:id="@+id/wType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@id/wNumber"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Lb"
                        android:textColor="#4DFFFFFF"
                        android:textSize="12dp"></TextView>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="2.5dp"
                    android:src="@drawable/ic_barweight" />

                <TextView
                    android:id="@+id/wNumberR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/wNumber"
                    android:fontFamily="@font/opensans_regular"
                    android:paddingRight="43dp"
                    android:text="18"
                    android:textColor="#4DFFFFFF"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/wTypeR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/wNumber"
                    android:fontFamily="@font/opensans_regular"
                    android:text="LB Left"
                    android:textColor="#4DFFFFFF"
                    android:textSize="12dp"></TextView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/eat"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginRight="4dp"
                app:cardBackgroundColor="#00000000">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_eat" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineSpotShadowColor="#00FFFFFF"
                app:cardBackgroundColor="#001C1C1E">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="1dp">

                    <TextView
                        android:id="@+id/eNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/opensans_sb"
                        android:text="375"
                        android:textColor="@color/white"
                        android:textSize="17dp"></TextView>

                    <TextView
                        android:id="@+id/eType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@id/eNumber"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Kcal"
                        android:textColor="#4DFFFFFF"
                        android:textSize="12dp"></TextView>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="2.5dp"
                    android:src="@drawable/ic_bareat" />

                <TextView
                    android:id="@+id/eNumberR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/wNumber"
                    android:fontFamily="@font/opensans_regular"
                    android:paddingRight="53dp"
                    android:text="2125"
                    android:textColor="#4DFFFFFF"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/eTypeR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/wNumber"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Kcal Left"
                    android:textColor="#4DFFFFFF"
                    android:textSize="12dp"></TextView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/water"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginRight="4dp"
                app:cardBackgroundColor="#00000000">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_water" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineSpotShadowColor="#00FFFFFF"
                app:cardBackgroundColor="#001C1C1E">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="1dp">

                    <TextView
                        android:id="@+id/waNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/opensans_sb"
                        android:text="23"
                        android:textColor="@color/white"
                        android:textSize="17dp"></TextView>

                    <TextView
                        android:id="@+id/waType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@id/waNumber"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Oz"
                        android:textColor="#4DFFFFFF"
                        android:textSize="12dp"></TextView>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="2.5dp"
                    android:src="@drawable/ic_barwater" />

                <TextView
                    android:id="@+id/waNumberR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/wNumber"
                    android:fontFamily="@font/opensans_regular"
                    android:paddingRight="43dp"
                    android:text="45"
                    android:textColor="#4DFFFFFF"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/waTypeR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/wNumber"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Oz Left"
                    android:textColor="#4DFFFFFF"
                    android:textSize="12dp"></TextView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/bed"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginRight="4dp"
                app:cardBackgroundColor="#00000000">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_bed" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineSpotShadowColor="#00FFFFFF"
                app:cardBackgroundColor="#001C1C1E">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="1dp">

                    <TextView
                        android:id="@+id/bNumber1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/opensans_sb"
                        android:text="07"
                        android:textColor="@color/white"
                        android:textSize="17dp"></TextView>

                    <TextView
                        android:id="@+id/bType1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="4dp"
                        android:layout_toRightOf="@id/bNumber1"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Hours"
                        android:textColor="#4DFFFFFF"
                        android:textSize="12dp"></TextView>

                    <TextView
                        android:id="@+id/bNumber2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_toRightOf="@id/bType1"
                        android:fontFamily="@font/opensans_sb"
                        android:text="45"
                        android:textColor="@color/white"
                        android:textSize="17dp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@id/bNumber2"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Mins"
                        android:textColor="#4DFFFFFF"
                        android:textSize="12dp"></TextView>

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="2.5dp"
                    android:src="@drawable/ic_barwater" />

                <TextView
                    android:id="@+id/bNumberR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/wNumber"
                    android:fontFamily="@font/opensans_regular"
                    android:paddingRight="43dp"
                    android:text="45"
                    android:textColor="#4DFFFFFF"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/bTypeR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/wNumber"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Oz Left"
                    android:textColor="#4DFFFFFF"
                    android:textSize="12dp"></TextView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/energy"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginRight="4dp"
                app:cardBackgroundColor="#00000000">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_energy" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineSpotShadowColor="#00FFFFFF"
                app:cardBackgroundColor="#001C1C1E">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="3dp">

                    <TextView
                        android:id="@+id/enNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/opensans_sb"
                        android:text="572"
                        android:textColor="@color/white"
                        android:textSize="17dp"></TextView>

                    <TextView
                        android:id="@+id/enType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@id/enNumber"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Kcal"
                        android:textColor="#4DFFFFFF"
                        android:textSize="12dp"></TextView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tengah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/riwayat"
        android:orientation="vertical"
        tools:context=".Horizontal_ScrollView">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="212dp"
                    android:layout_height="270dp"
                    android:layout_marginRight="30dp"
                    app:cardBackgroundColor="#000000"
                    app:cardCornerRadius="18dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="196dp"
                        android:layout_height="196dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="11dp">

                        <ImageButton
                            android:layout_width="196dp"
                            android:layout_height="196dp"
                            android:src="@drawable/gambar1"
                            android:onClick="onBmiButton"></ImageButton>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Kalkulator BMG"
                            android:textColor="@color/white"
                            android:textSize="17dp"></TextView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="21dp"
                        android:layout_marginBottom="35dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Terakhir kali digunakan"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12dp"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="21dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/opensans_bold"
                        android:text="15 Desember 2021"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12dp"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="212dp"
                    android:layout_height="270dp"
                    android:layout_marginRight="30dp"
                    app:cardBackgroundColor="#000000"
                    app:cardCornerRadius="18dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="196dp"
                        android:layout_height="196dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="11dp">

                        <ImageView
                            android:layout_width="196dp"
                            android:layout_height="196dp"
                            android:src="@drawable/gambar1"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Kalkulator BMG"
                            android:textColor="@color/white"
                            android:textSize="17dp"></TextView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="21dp"
                        android:layout_marginBottom="35dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Terakhir kali digunakan"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12dp"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="21dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/opensans_bold"
                        android:text="15 Desember 2021"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12dp"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="212dp"
                    android:layout_height="270dp"
                    android:layout_marginRight="30dp"
                    app:cardBackgroundColor="#000000"
                    app:cardCornerRadius="18dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="196dp"
                        android:layout_height="196dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="11dp">

                        <ImageView
                            android:layout_width="196dp"
                            android:layout_height="196dp"
                            android:src="@drawable/gambar1"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Kalkulator BMG"
                            android:textColor="@color/white"
                            android:textSize="17dp"></TextView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="21dp"
                        android:layout_marginBottom="35dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Terakhir kali digunakan"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12dp"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="21dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/opensans_bold"
                        android:text="15 Desember 2021"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12dp"></TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tengah"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_swipe"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe untuk lanjut"
            android:textColor="#4DFFFFFF"
            android:textSize="15dp"></TextView>

    </LinearLayout>
</RelativeLayout>